<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/separate_picture_iv"
        android:layout_width="match_parent"
        android:layout_height="250sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignBottom="@id/separate_picture_iv"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/pic_photographer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/separate_picture_iv"
        android:layout_margin="8sp"
        android:drawablePadding="4sp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/baseline_person_24"
        tools:text="photographer" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/separate_picture_iv"
        android:padding="5dp"
        android:text="Action" />

</RelativeLayout>